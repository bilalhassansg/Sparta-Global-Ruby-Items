<table>
  <thead>
    <tr>
      <th>Serial number</th>
      <th>Description</th>
      <th>Supplier</th>
      <th>Status</th>
      <th>Lender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.serial_number %></td>
        <td><%= item.description %></td>
        <td><%= item.supplier %></td>
        <td><%= item.status %></td>
        <td><%= item.lender %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>